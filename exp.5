#include<stdio.h>

    int factorial(int n){
        if(n == 0 || n == 1)
        return 1;
        else
        return n * factorial(n-1); //Recursive case
        
    }
    int main(){
    int num = 6;
    printf("Factorial if %d is %d\n", num, factorial(num));
    return 0;
    }
